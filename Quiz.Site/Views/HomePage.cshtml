@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-100">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column mx-lg-0 mx-auto">
                        <div class="card card-plain py-lg-3">
                            <div class="card-body text-left">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <h4 class="mb-0 font-weight-bolder">Login</h4>
                                    @await Component.InvokeAsync("Login")
                                    
                                    if(Model.FirstChild<ForgottenPasswordPage>() is ForgottenPasswordPage forgottenPassword)
                                    {
                                        <p class="my-4"><a href="@forgottenPassword.Url()">Can't remember your password?</a></p>    
                                    }
                                    <p class="my-4">Don't have an account yet? <a href="/register/">Register here</a></p>
                                }
                                else
                                {
                                    <h4>Umbraco Community Quiz</h4>
                                    <p>Go to your <a class="my-4" href="/profile/">Profile</a></p>
                                }
                            </div>
                        </div>
                    </div>
                    @await Component.InvokeAsync("SideBanner")
                </div>
            </div>
        </div>
    </section>
</main>